#!/bin/bash
# CPU
CPU="x86_64"
if [[ $# -ge 1 ]]
then
  CPU=$1
fi

# OS
OS="linux"
if [[ $# -ge 2 ]]
then
  OS=$2
fi

# EXT
ext=""
if [[ $# -ge 3 ]]
then
  EXT=$3
fi

BUILDDIR="/home/epidata/FreePascal/thtmlport/package"
pushd "$BUILDDIR" > /dev/null

# Compile twice... because thtmlport sucks.
clearfpc > /dev/null
fpc -P$CPU -T$OS -n @fpc.cfg htmlcomp.pas > /dev/null
fpc -P$CPU -T$OS -n @fpc.cfg htmlcomp.pas > /dev/null

popd > /dev/null

